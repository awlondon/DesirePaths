<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.pdceng.www.desirepaths.MapActivity"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <!--<fragment-->
            <!--android:id="@+id/piList"-->
            <!--android:name="com.pdceng.www.desirepaths.PublicInputListFragment"-->
            <!--class="com.pdceng.www.desirepaths.PublicInputListFragment"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_above="@+id/menu_map" />-->

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/myLocation"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:elevation="0dp"
            android:visibility="visible"
            map:backgroundTint="@color/cardview_shadow_start_color"
            map:fabSize="mini"
            map:rippleColor="@color/lightGrey"
            map:srcCompat="@drawable/ic_my_location" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/prevMap"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/myLocation"
            android:layout_marginStart="14dp"
            android:clickable="true"
            android:elevation="0dp"
            android:visibility="invisible"
            map:backgroundTint="@color/darkBlue"
            map:fabSize="mini"
            map:srcCompat="@drawable/ic_return" />

        <include
            android:id="@+id/menu"
            layout="@layout/menu_map"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/addType"
            layout="@layout/add_type"
            android:layout_margin="10dp"
            android:layout_above="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/llFilter"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/menu"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="100dp"
            android:background="@drawable/rounded_corners"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="invisible">

            <CheckBox
                android:id="@+id/cbPositive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Positive" />

            <CheckBox
                android:id="@+id/cbNeutral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Neutral" />

            <CheckBox
                android:id="@+id/cbNegative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Negative" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
